@using News.Application.Statics
@using News.Domain.ViewModels.Reports
@model DetailsReportViewModel
@{
    ViewData["Title"] = "جزیات گزارش";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <div class="block-header">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <ul class="breadcrumb breadcrumb-style ">
                                <li class="bcrumb-1">
                                    <a href="/">خانه</a>
                                </li>
                                <li class="bcrumb-3">
                                    @ViewData["Title"]
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="product-store">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                <div class="product-gallery">
                                    
                                    <div class="product-gallery-featured">
                                        <img src="@(SiteTools.ReportImagesName + Model.Image)" alt="@Model.ImageAlt">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                <div class="product-payment-details">
                                    <h2 class="product-price display-4">@Model.Title</h2>
                                    <p class="last-sold text-muted"><small>@Model.Description</small></p>
                                    <h4 class="product-title mb-2">@Model.FullText </h4>
                                    <p><i class="fa fa-bookmark col-red"></i> <strong>@Model.ImageAlt</strong></p>
                                    <p><i class="fa fa-bookmark col-red"></i> <strong>@Model.ImageTitle</strong></p>
                                    <p><i class="fa fa-bookmark col-red"></i> <strong>@Model.Author</strong></p>
                                    <p><i class="fa fa-bookmark col-red"></i> <strong>@Model.Source</strong></p>
                                    <p><i class="fa fa-bookmark col-red"></i> <strong>@Model.Tags</strong></p>
                                    <p><i class="fa fa-credit-card text-success"></i> <strong> @Model.GroupReport </strong></p>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

