@using News.Domain.ViewModels.Hashtags
@model EditHashtagViewModel

@{
    ViewData["Title"] = "ویرایش هشتگ";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <form asp-area="Admin" asp-controller="Hashtag" asp-action="EditHashtag" method="post" enctype="multipart/form-data">
                    <div class="row clearfix">
                        <input type="hidden" asp-for="HashtagId" />
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label asp-for="HashtagName" class="control-label"></label>
                                    <input asp-for="HashtagName" class="form-control" />
                                    <span asp-validation-for="HashtagName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <button type="submit" class="btn btn-warning btn-lg m-l-15 waves-effect">ویرایش</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>